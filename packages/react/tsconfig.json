{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "outDir": "./lib",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./**/*.json",
    "./**/*.ts",
    "./**/*.tsx" 
  ],
  "exclude": [
    "./components/**/*.stories.tsx",
    "node_modules",
    "./jest*",
    "./snapshotResolver.ts",
    "./fileTransformer.cjs",
    "./package.json",
    "./coverage",
    "./tsup.config.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
